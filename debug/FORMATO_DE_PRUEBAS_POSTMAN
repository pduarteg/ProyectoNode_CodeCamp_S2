// Para pruebas en POSTMAN:

// Para crear usuario
(POST)
localhost:3000/usuarios/crearUsuario

{
	"rol": 1,
	"correo": "usuario@prueba",
	"nombre_completo": "Usuario Cliente Para Preubas",
	"u_pass": "1010011010",
	"tel": "1111100111",
	"fecha_nacimiento": "1999-12-31"
}

