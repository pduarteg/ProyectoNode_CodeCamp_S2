// Para crear producto (debe ser Cliente)

(POST)
localhost:3000/productos/crearProducto

{
    "categ": 7,
    "nombre": "INVENTO",
    "marca": "nueva nueva",
    "codigo": "0101010",
    "stock": 3,
    "precio": 3.5
}
// ---------------------------------------------------------------
// Para actualizar producto (debe ser Cliente)
(PUT)
localhost:3000/productos/actualizarProducto/17
{
    "categ": 7,
    "nombre": "INVENTO",
    "marca": "nueva nueva",
    "codigo": "0101010",
    "stock": 3,
    "precio": 3.5,
    "foto": null,
    "foto_url": "URL_DE_LA_FOTO"
}

